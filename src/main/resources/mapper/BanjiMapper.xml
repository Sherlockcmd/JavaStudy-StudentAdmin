<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.easy.springboot.mapper.IBanjiMapper">


    <insert id="add">
        insert into banji(id,name,address)
        values (#{id},#{name},#{address})
    </insert>

    <select id="list" resultType="Banji">
        select id,name,address
        from banji
        <where>
            <if test="name!=null and name!=''">
                and name like concat('%',#{name},'%')
            </if>
            <if test="address!=null and address!='' ">
                and address like concat('%',#{address},'%')
            </if>
        </where>

    </select>

    <delete id="deleteById">
        delete from banji where id=#{id}
    </delete>

    <delete id="deleteAll">
        delete from banji
        where id in
        <foreach collection="array" open="(" close=")" item="id" separator=",">
            #{id}
        </foreach>
    </delete>


    <select id="selectById" resultType="Banji">
        select id,name,address from banji
        where id=#{id}
    </select>

    <update id="update" parameterType="Banji">
        update banji
        set name=#{name},address=#{address}
        where id=#{id}
    </update>

    <select id="selectAll" resultType="Banji">
        select id,name,address from banji
    </select>

    <select id="selectBanjiCount" resultType="BanjiVO">
        select b.name,count(*) as value
        from student as s inner join banji as b
        on s.banji_id=b.id
        group by b.id
    </select>









</mapper>
  