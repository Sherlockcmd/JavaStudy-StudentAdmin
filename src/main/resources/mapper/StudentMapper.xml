<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.easy.springboot.mapper.IStudentMapper">


    <insert id="add">
        insert into student(name,age,gender,banji_id)
        values (#{name},#{age},#{gender},#{banjiId})
    </insert>

    <select id="list" resultType="StudentVO">
        select s.*,b.name as banjiName
        from student as s inner join banji as b
        on s.banji_id=b.id
        <where>
            <if test="name!=null and name!=''">
                and s.name like concat('%',#{name},'%')
            </if>
            <if test="banjiId!=null">
                and s.banji_id=#{banjiId}
            </if>
        </where>

    </select>

    <delete id="deleteById">
        delete from student where id=#{id}
    </delete>

    <delete id="deleteAll">
        delete from student
        where id in
        <foreach collection="array" open="(" close=")" item="id" separator=",">
            #{id}
        </foreach>
    </delete>


    <select id="selectById" resultType="Student">
        select id,name,age,gender,banji_id from student
        where id=#{id}
    </select>

    <update id="update" parameterType="Student">
        update student
        set name=#{name},age=#{age},gender=#{gender},banji_id=#{banjiId}
        where id=#{id}
    </update>




	
</mapper>
  